<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
                 version="2.0">
    <description>My First JPA XML Application</description>
    <package>org.jboss.aerogear.unifiedpush.model.jpa</package>

    <mapped-superclass class="org.jboss.aerogear.unifiedpush.jpa.PersistentObject">
        <attributes>
            <id name="id"/>
        </attributes>
    </mapped-superclass>
    <entity class="AbstractVariantEntity" access="FIELD">
        <inheritance strategy="JOINED"/>
        <discriminator-column name="TYPE" discriminator-type="STRING"/>
        <attributes>
            <one-to-many name="installations">
                <join-column name="variantID" referenced-column-name="variantID"/>
                <cascade>
                    <cascade-remove/>
                </cascade>
            </one-to-many>
        </attributes>
    </entity>
    <entity class="AndroidVariantEntity" access="FIELD">
        <discriminator-value>android</discriminator-value>
    </entity>
    <entity class="InstallationEntity" access="FIELD">
        <attributes>
            <element-collection name="categories" fetch="EAGER"/>
        </attributes>
    </entity>
    <entity class="iOSVariantEntity" access="FIELD">
        <discriminator-value>ios</discriminator-value>
        <attributes>
            <basic name="certificate">
                <lob/>
            </basic>
        </attributes>
    </entity>
    <entity class="PushApplicationEntity" access="FIELD">
        <attributes>
            <one-to-many name="iOSVariants" fetch="EAGER">
                <join-column/>
                <cascade>
                    <cascade-remove/>
                </cascade>
            </one-to-many>
            <one-to-many name="androidVariants" fetch="EAGER">
                <join-column/>
                <cascade>
                    <cascade-remove/>
                </cascade>
            </one-to-many>
            <one-to-many name="simplePushVariants" fetch="EAGER">
                <join-column/>
                <cascade>
                    <cascade-remove/>
                </cascade>
            </one-to-many>
            <one-to-many name="chromePackagedAppVariants" fetch="EAGER">
                <join-column/>
                <cascade>
                    <cascade-remove/>
                </cascade>
            </one-to-many>
        </attributes>
    </entity>
    <entity class="SimplePushVariantEntity" access="FIELD">
        <discriminator-value>simplePush</discriminator-value>
    </entity>
    <entity class="ChromePackagedAppVariantEntity" access="FIELD">
        <discriminator-value>chromePackagedApp</discriminator-value>
    </entity>
</entity-mappings>
