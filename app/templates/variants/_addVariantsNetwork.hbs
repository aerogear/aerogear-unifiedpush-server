<h3>Choose A Network:</h3>
<section>
    <label>
        <input type="radio" checked name="platform" value="android">
        Google Cloud Messaging
    </label>
    <div class="network-help"><a href="http://aerogear.org/docs/guides/aerogear-push-ios/" target="_blank">AeroGear Help</a></div>
    <div class="network">
        <label>Google API Key</label>
        {{input type="text" valueBinding="googleKey" classNames="topcoat-text-input" classNameBindings="validationErrors.googleKey:error"}}
        <br>
        <label>
        Project Number
        </label>
        {{input type="text" name="projectNumber" valueBinding="projectNumber" classNames="topcoat-text-input" }}
    </div>
</section>
<section>
    <label>
        <input type="radio" name="platform" value="iOS">
        Apple Push Network
    </label>
    <div class="network-help"><a href="http://aerogear.org/docs/guides/aerogear-push-ios/" target="_blank">AeroGear Help</a></div>
    <div class="network">
        <label>Passphrase</label>
        {{input type="password" name="passphrase" valueBinding="passphrase" classNames="topcoat-text-input" classNameBindings="validationErrors.passphrase:error"}}
        <br>
        <label>Certificate</label>
        {{input type="file" name="certificate" valueBinding="certificate"}}
        <br>
        <label>Production</label>
        {{view Ember.Checkbox checkedBinding="production"}}
    </div>
</section>
<section>
    <label>
        <input type="radio" name="platform" value="simplePush">
        SimplePush
    </label>
    <div class="network-help"><a href="http://aerogear.org/docs/guides/aerogear-push-ios/" target="_blank">AeroGear Help</a></div>
    <!--<div class="network">
        <label>Web</label>
        //Maybe a description or somehting here
    </div>-->
</section>
